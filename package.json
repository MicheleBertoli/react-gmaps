{
  "name": "react-gmaps",
  "version": "2.0.0-next.0",
  "license": "MIT",
  "author": "michelebertoli <michele@berto.li>",
  "contributors": [
    "michelebertoli <michele@berto.li>",
    "AnatoleLucet <anatole@hey.com>"
  ],
  "description": "A modern Google Maps integration for ReactJS",
  "keywords": [
    "React.js",
    "Google Maps",
    "google",
    "google-map",
    "gmaps",
    "gmap",
    "typescript",
    "javascript",
    "react",
    "reactjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MicheleBertoli/react-gmaps.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:dev": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit",
    "format": "prettier --write --ignore-path=.gitignore ."
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.7",
    "react": "^18",
    "react-dom": "^18",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.15.1",
    "@types/google.maps": "^3.53.0"
  }
}
